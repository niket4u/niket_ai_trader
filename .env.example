
# Core
MODE=paper
REFRESH_SECONDS=60
DASHBOARD_PORT=8080
LOG_LEVEL=INFO

# Disk usage & logs
LOG_DIR=/tmp/niketbot_logs
LOG_RETENTION_DAYS=3

# Caps & Limits
INVESTMENT_CAP=5000
MONTHLY_GAIN_TARGET=2000
MONTHLY_LOSS_LIMIT=500
DAILY_LOSS_LIMIT=200

# Signals / Rules
EXIT_LEVERAGED_MIN_BEFORE_CLOSE=60
ALLOW_URGENT_BYPASS=true

# Email / IMAP
GMAIL_ADDRESS=you@gmail.com
GMAIL_APP_PASSWORD=your_app_password
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
CONFIRMATION_ACCT_SUFFIX=0647

# SMS (optional)
ENABLE_SMS=false
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
ALERT_SMS_TO=

# OpenAI (optional)
OPENAI_API_KEY=

# Dashboard (optional auth)
DASHBOARD_REFRESH_SEC=15
DASHBOARD_USER=
DASHBOARD_PASS=

# Daily summary email (optional)
ENABLE_DAILY_SUMMARY=true
SUMMARY_HOUR_ET=16
SUMMARY_MINUTE=5
